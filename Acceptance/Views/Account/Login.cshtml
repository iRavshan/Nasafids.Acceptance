@model LoginViewModel
@{
    ViewData["Title"] = "Kirish";
}

<section class="signin-section">
    <div class="container-fluid">
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Kirish</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#0">Boshqaruv</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Kirish
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <div class="row g-0 auth-row">
            <div class="col-lg-6">
                <div class="auth-cover-wrapper bg-primary-100">
                    <div class="auth-cover">
                        <div class="title text-center">
                            <h1 class="text-primary mb-10">Xush kelibsiz</h1>
                            <p class="text-medium">Universitetning 2022 - 2023 - o'quv yili uchun qabul platformasi.</p>
                        </div>
                        <div class="cover-image">
                            <img src="/images/auth/signin-image.svg" alt="" />
                        </div>
                        <div class="shape-image">
                            <img src="/images/auth/shape.svg" alt="" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="signin-wrapper">
                    <div class="form-wrapper">
                        <h6 class="mb-15">Kirish</h6>
                        <p class="text-sm mb-25">Faqatgina maxsus kalitga ega shaxslar kirishlari mumkin.</p>
                        <form asp-controller="account" asp-action="login" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="input-style-1">
                                        <label asp-for="Key"></label>
                                        <input asp-for="Key" type="text" placeholder="Kalitni kiriting" />
                                        <span class="text-danger" asp-validation-for="Key"></span>
                                        <div asp-validation-summary="ModelOnly"></div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="button-group d-flex justify-content-center flex-wrap ">
                                        <button type="submit" class="main-btn primary-btn btn-hover w-100 text-center">
                                            Kirish
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
